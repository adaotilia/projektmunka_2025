<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:DolgozoiBeleptetoMobilApp.ViewModels"
             x:Class="DolgozoiBeleptetoMobilApp.Views.CheckInPage">

    <ContentPage.BindingContext>
        <vm:CheckInViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout Padding="30" Spacing="15">
        <Label Text="Munka megkezdése" FontAttributes="Bold" FontSize="22" />
        <Button Text="Bejelentkezés" Command="{Binding CheckInCommand}" />
    </VerticalStackLayout>
</ContentPage>